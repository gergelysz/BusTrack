<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="bustracker.ms.sapientia.ro.bustrack">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_bus"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_bus_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity
            android:name=".Activities.SettingsActivity"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name=".Activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            tools:ignore="InnerclassSeparator">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Fragments.ListedBusDetailsFragment"
            tools:ignore="InnerclassSeparator" />

        <service
            android:name=".Services.OnAppExitedHelperService"
            android:enabled="true"
            android:exported="false"
            android:stopWithTask="false"
            tools:ignore="InnerclassSeparator" />
    </application>
</manifest>