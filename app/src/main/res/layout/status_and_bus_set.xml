<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/status_and_bus_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/popup_style_set"
        android:padding="12dp"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/editText_sab_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/modernsans"
            android:text="@string/please_choose_your_current_status"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText_sab_status"
            android:layout_marginTop="8dp">

            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/modernsans"
                android:text="@string/on_bus"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/modernsans"
                android:text="@string/waiting_for_bus"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </RadioGroup>

        <TextView
            android:id="@+id/editText_sab_selectBus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/radioGroup"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/modernsans"
            android:text="@string/please_choose_your_current_bus"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spinner_statAndBus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText_sab_selectBus"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/modernsans"
            android:popupBackground="@color/white"
            tools:targetApi="lollipop" />

        <Button
            android:id="@+id/button_apply_status_and_bus"
            android:layout_width="52dp"
            android:layout_height="32dp"
            android:layout_below="@+id/spinner_statAndBus"
            android:layout_centerHorizontal="true"
            android:background="@color/darkergray"
            android:fontFamily="@font/modernsans"
            android:text="@string/apply"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </RelativeLayout>
</RelativeLayout>