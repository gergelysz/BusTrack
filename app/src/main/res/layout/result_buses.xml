<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/status_and_bus_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/popup_style_set"
        android:padding="12dp"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/editText_result_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/modernsans"
            android:text="@string/list_of_all_buses_heading_to"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_below="@id/editText_result_title"/>

        <ListView
            android:id="@+id/listView_result_buses"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/view_line" />

    </RelativeLayout>

</RelativeLayout>

